%% -*- erlang -*-
[{node, [
    {primary_workers, [
        pinger_worker,
        node_utils_server,
        node_storage_server
    ]},
    {distributed_workers, [
        generic_tasks_server,
        generic_tasks_worker,
        node_benchmark_server
